<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/selection_screen_header"
        android:text="@string/selection_screen_header"
        android:layout_margin="@dimen/selection_screen_margin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/selection_screen_spinner"
        android:layout_below="@id/selection_screen_header"
        android:layout_margin="@dimen/selection_screen_margin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:id="@+id/selection_screen_reminder_text"
        android:text="@string/selection_screen_reminder_text"
        android:layout_margin="@dimen/selection_screen_margin"
        android:layout_below="@id/selection_screen_spinner"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/selection_screen_done-btn"
        android:text="@string/selection_screen_done_btn"
        android:layout_margin="@dimen/selection_screen_margin"
        android:layout_below="@id/selection_screen_reminder_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
